<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New aromat"
        android:fontFamily="@font/red_rose"
        android:textSize="12pt"
        android:textAlignment="center"
        android:layout_marginStart="210dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ваш аромат"
        android:fontFamily="@font/red_rose_bold"
        android:textColor="@color/black"
        android:textSize="10pt"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:src="@drawable/image_5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:text="Acqua Di Gio от \nGiorgio Armani\n\n16 000 рублей"
                android:fontFamily="@font/red_rose"
                android:textSize="8pt"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="90dp"
        android:layout_gravity="center"

        android:drawableRight="@drawable/vector"
        android:fontFamily="@font/red_rose"
        android:gravity="center_horizontal"
        android:text="Сердечные нотки содержат пряный мускат, " />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TableRow>
            <TextView
                android:text="Доставка"
                android:width="137dp"
                android:height="50dp"
                android:gravity="center"
                android:fontFamily="@font/red_rose"
                android:textSize="8pt"/>

            <Switch
                android:width="165dp"
                android:layout_height="50dp"
                android:text="Курьер"
                android:fontFamily="@font/red_rose"
                android:textSize="8pt"
                android:gravity="center_vertical"
                android:textColor="@color/gray_600"/>
        </TableRow>

        <TableRow>
            <View/>

            <Switch
                android:width="137dp"
                android:height="50dp"
                android:text="Самовывоз"
                android:fontFamily="@font/red_rose"
                android:textSize="8pt"
                android:gravity="center_vertical"
                android:textColor="@color/gray_600"/>
        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="361dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="Заполните данные, мы с вами свяжемся"
        android:fontFamily="@font/red_rose_bold"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="@color/gray_600"
        android:layout_marginTop="20dp"/>

    <EditText
        android:layout_width="361dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:text="\t\t\t\tВведите свое имя"
        android:fontFamily="@font/red_rose"
        android:gravity="center_vertical"
        android:textSize="7pt"
        android:background="@drawable/shape"
        android:textColor="@color/gray_600"/>

    <EditText
        android:layout_width="361dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:text="\t\t\t\tВведите свой номер телефона"
        android:fontFamily="@font/red_rose"
        android:gravity="center_vertical"
        android:textSize="7pt"
        android:background="@drawable/shape"
        android:textColor="@color/gray_600"/>

    <Button
        android:layout_width="361dp"
        android:layout_height="65dp"
        android:backgroundTint="#EACCA8"
        android:text="Заказать"
        android:fontFamily="@font/red_rose"
        android:textSize="7pt"
        android:layout_gravity="center"
        android:textColor="@color/gray_100"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="361dp"
        android:layout_height="65dp"
        android:backgroundTint="#EACCA8"
        android:text="Позвонить"
        android:fontFamily="@font/red_rose"
        android:textSize="7pt"
        android:layout_gravity="center"
        android:textColor="@color/gray_100"/>

</LinearLayout>